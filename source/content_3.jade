doctype html
html
  head
    title Filter
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="images/favicon.ico" rel="shortcut icon")
    meta(charset="UTF-8")
    link(rel="stylesheet", href="https://unpkg.com/element-ui/lib/theme-chalk/index.css")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.0.13/css/all.css")
    link(rel="stylesheet", href="stylesheets/all.css")
  body
    header#header
      .container
        .row
          a(href="index.html").logo
            img(src="images/logo.svg", alt="logo")
          .search
            .search-bar
              img.search-icon(src="images/search.svg", alt="")
              input(type="text" placeholder="Explore your own activities")

    section#wrapper
      .container
        .row.flex-column.flex-md-row

          .side-search.d-none.d-md-block

            .location-search
              h4 Location
              select.country
                option(value="taiwan") Taiwan
                option(value="japan") Japan
                option(value="korea") Korea
                option(value="china") China

            .date-search
              h4 Date
              .start-end-date
                .start-date.d-flex.justify-content-between.align-items-center
                  span.w-25 from
                  input(type="date").w-75

                .end-date.d-flex.justify-content-between.align-items-center
                  span.w-25 to
                  input(type="date").w-75

            .categories-search
              h4 Categories
              .categories-group
                .categories-check
                  input(type="checkbox" id="all")
                  label(for="all").d-flex.align-items-center
                    .checked
                    span All
                .categories-check
                  input(type="checkbox" id="entertainment")
                  label(for="entertainment").d-flex.align-items-center
                    .checked
                    span Entertainment
                .categories-check
                  input(type="checkbox" id="food")
                  label(for="food").d-flex.align-items-center
                    .checked
                    span Food
                .categories-check
                  input(type="checkbox" id="learnign")
                  label(for="learnign").d-flex.align-items-center
                    .checked
                    span Learnign
                .categories-check
                  input(type="checkbox" id="outdoors")
                  label(for="outdoors").d-flex.align-items-center
                    .checked
                    span Outdoors

          .article-content
            .explore
              p.labels
                span.explore-label Explore
                span.slash-label /
                span.title-label I have hinted that I would often jerk poor Queequeg from between the wha
            .content
              .content-img(style="background-image: url('https://images.unsplash.com/photo-1470582891830-22e103e72deb?ixlib=rb-0.3.5&s=f7b7c9a872572af5cf9c7e6f774cadc5&auto=format&fit=crop&w=500&q=60')")
              .content-info
                h1.title I have hinted that I would often jerk poor Queequeg from between the wha.
                .labels.d-flex.align-items-center
                  .organizer-label
                    span Landon Powers
                  .category-label.d-none.d-md-block
                    span Entertainment
                .date-time.d-flex.flex-column.flex-lg-row
                  .date
                    i.fas.fa-map-marker-alt
                    span Kaohsiung City
                  .time
                    i.far.fa-calendar-alt
                    span 2018/5/24 - 2018/5/31
