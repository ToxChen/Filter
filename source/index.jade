            ul.items
              li.item
                a(href="content_1.html").d-flex.flex-column.flex-lg-row
                  .item-img(style="background-image: url('https://images.unsplash.com/photo-1505231266314-31bfde92b757?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=d3fe3131d5feba9c1e6aa9bb9daa2bf6&auto=format&fit=crop&w=500&q=60')")
