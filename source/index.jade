doctype html
html
  head
    title Filter
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="images/favicon.ico" rel="shortcut icon")
    meta(charset="UTF-8")
    link(rel="stylesheet", href="https://unpkg.com/element-ui/lib/theme-chalk/index.css")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.0.13/css/all.css")
    link(rel="stylesheet", href="stylesheets/all.css")
  body
    header#header
      .container
        .row
          a(href="index.html").logo
            img(src="images/logo.svg", alt="logo")
          .search
            .search-bar
              img.search-icon(src="images/search.svg", alt="")
              input(type="text" placeholder="Explore your own activities")
    .search-md.d-md-none
      .container
        .row
          .search-bar
            img.search-icon(src="images/search-black.svg", alt="")
            input(type="text" placeholder="Explore your own activities")

    section#wrapper
      .container
        .row.flex-column.flex-md-row

          .side-search

            .location-search
              h4 Location
              select.country
                option(value="taiwan") Taiwan
                option(value="japan") Japan
                option(value="korea") Korea
                option(value="china") China

            .date-search
              h4 Date
              .start-end-date
                .start-date.d-flex.justify-content-between.align-items-center
                  span.w-25 from
                  input(type="date").w-75

                .end-date.d-flex.justify-content-between.align-items-center
                  span.w-25 to
                  input(type="date").w-75

            .categories-search
              h4 Categories
              .categories-group
                .categories-check
                  input(type="checkbox" id="all")
                  label(for="all").d-flex.align-items-center
                    .checked
                    span All
                .categories-check
                  input(type="checkbox" id="entertainment")
                  label(for="entertainment").d-flex.align-items-center
                    .checked
                    span Entertainment
                .categories-check
                  input(type="checkbox" id="food")
                  label(for="food").d-flex.align-items-center
                    .checked
                    span Food
                .categories-check
                  input(type="checkbox" id="learnign")
                  label(for="learnign").d-flex.align-items-center
                    .checked
                    span Learnign
                .categories-check
                  input(type="checkbox" id="outdoors")
                  label(for="outdoors").d-flex.align-items-center
                    .checked
                    span Outdoors

          .main-content
            .results.d-none.d-md-block
              h3
                | Showing
                span.results-num 15
                | results by...
            .category.d-none.d-md-block
              a(href="#").btn.btn-custom
                | Koahsiung
                .delete
              a(href="#").btn.btn-custom
                | Entertainment
